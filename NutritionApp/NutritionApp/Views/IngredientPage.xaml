<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.Views.IngredientPage"
             Title="Ingredients">
    
    <!-- has add new profile button on toolbar -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Clicked="New_Ingredient_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Search Ingredients..."
                       HorizontalOptions="Fill"
                       BackgroundColor="#f3f3f3"/>

            <!-- add list view of ingredients -->
            <ListView x:Name="ingredientList"
                  ItemsSource="{Binding Ingredients}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" TextColor="Black" Detail="{Binding Kj}"/>
                        </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
            
        </StackLayout>


    </ContentPage.Content>
</ContentPage>