<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.Views.NewMealPage"
             Shell.PresentationMode="ModalAnimated"
             Title="New Meal"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <!-- change properties to match profiles table -->
        <StackLayout Spacing="3" Padding="15">
            <Label Text="New Meal" FontSize="Medium"/>
            <Label Text="Name" FontSize="Medium" />
            <Entry Text="" FontSize="Medium" />
            
            <Label Text="Ingredient" FontSize="Medium" />
            <Picker Title="Select an Ingredient"/>
            
            <Label Text="kJ per Serve" FontSize="Medium" />
            <Editor Text="" AutoSize="TextChanges" FontSize="Medium" Margin="0" />
            
            <!-- add collection view of ingredients for new meal -->
            
            <StackLayout Orientation="Horizontal">
                <Button Text="Create" Command="{Binding SubmitCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
